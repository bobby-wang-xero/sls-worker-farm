{
  "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": "src",
      "esModuleInterop": true,
      "importsNotUsedAsValues": "preserve",
      "lib": ["ES2020", "DOM"],
      "module": "CommonJS",
      "moduleResolution": "Node",
      "noImplicitAny": true,
      "outDir": "./dist/",
      "preserveConstEnums": true,
      "removeComments": true,
      "sourceMap": true,
      "target": "ES2019"
  },
  "include": [
      "services/**/*.ts"
  ],
  "exclude": [
    "**/node_modules",
    "**/dist",
    "**/*.test.ts",
    "**/__test__",
    "**/__mocks__"
  ]
}
